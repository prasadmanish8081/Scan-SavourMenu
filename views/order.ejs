<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="border-b-2 h-20 w-screen flex items-center pl-16 gap-8">
        <h1 class="text-4xl font-bold"><span class="text-green-500">Scan</span>&Savour</h1>
        <a href="/home">My Menus</a>
        <a href="/order">My Orders</a>
        <a href="/account">My Account</a>
        <button><a href="/logout">Log out </a><span class="text-zinc-300">( <%= user.email %> )</span></button>
    </div>
    <div class="h-screen w-screen p-16">
        <div class="flex justify-between">
            <div>
                <h1 class="text-4xl font-semibold mb-2">My Orders</h1>
                <p>Your current orders in progress!</p>
            </div>
        </div>
        <div class="h-2 w-screen flex justify-center items-center mt-7 mb-4">
            <div class="h-1 w-96 bg-zinc-200"></div>
        </div>
        <div>
            <div class="flex  gap-12">
                <div class="h-screen w-72 bg-green-100">

                </div>
                <div class=" flex flex-col gap-12">
                    <% orders.forEach(order => { %>
                    <div class="flex justify-evenly gap-20">
                        <div>
                            <h1 class="text-2xl font-bold"><%= order.date.toLocaleString() %></h1>
                        </div>
                        <ul>
                            <% order.items.forEach(item => { %>
                              <li> <strong><%= item.name %> </strong> - Rs.<%= item.price %> x <%= item.quantity %> <br>
                                <em><%= item.description %></em>
                            </li>
                            <% }) %>
                          </ul>
                          <p><strong>Total:</strong> Rs.<%= order.total %></p>
                    </div>
                    <% }) %>
                    
                </div>
            </div>
        </div>
    </div>
</body>
</html>